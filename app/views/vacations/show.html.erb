<h2><%= "#{@vacation.name} starting on #{@vacation.start_date.strftime('%m/%d/%Y')} and ending on #{@vacation.end_date.strftime('%m/%d/%Y')}"%></h2>
<h2>Your current flights</h2>
<ol>
  <% @vacation.flights.each do |flight| %>
    <li>
      <ul>
        <li>Airline: <%= flight.airline %></li>
        <li>Origin City: <%= flight.origin.name %></li>
        <li>Takeoff Time: <%= flight.start_time.strftime("%m/%d/%Y") %>, <%= flight.start_time.strftime("%I:%M%p")%> </li>
        <li>Destination City: <%= flight.destination.name %></li>
        <li>Landing Time: <%= flight.end_time.strftime("%m/%d/%Y") %>, <%= flight.end_time.strftime("%I:%M%p") %></li>
      </ul>
      <br>
    </li>
  <% end %>
</ol>
<h2>Search for your next flight!</h2>
<%= form_tag("/flights/search/#{@vacation.id}", method: :get) do %>
  <%= label_tag "Origin location:" %>
  <% if !@vacation.cur_city.nil? %>
    <%= label_tag @vacation.cur_city.name %> <br>
    <%= hidden_field_tag "flight[origin_id]", @vacation.cur_city.id  %>
  <% else %>
    <%= collection_select :flight, :origin_id, @cities, :id, :name, prompt: "Please select origin city" %><br>
  <% end %>
  <%= label_tag "Destination location" %>
  <%= collection_select :flight, :destination_id, @cities, :id, :name, prompt: "Please select destination city" %><br>
  <%= label_tag "Choose time" %>
  <%= datetime_select("flight", "start_time") %><br>
  <%= submit_tag 'Search', name: nil %>
<% end %>
